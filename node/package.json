{
  "name": "shellviz",
  "version": "0.2.2",
  "description": "Visualization toolkit for shell scripts and command-line tools",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "browser": "./dist/browser.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/browser.mjs",
      "import":  "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types":   "./dist/index.d.ts",
      "default": "./dist/index.cjs"
    },
    "./browser": "./dist/browser.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:node": "node prepare_dist.cjs",
    "build:browser": "esbuild ../browser/index.js --bundle --format=esm --platform=browser --outfile=dist/browser.mjs --banner:js=\"/* eslint-disable */\"",
    "build": "npm run build:node && npm run build:browser",
    "pack": "npm run build && npm pack --pack-destination=build"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "esbuild": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "author": "Jean-Marc Skopek <jskopek@gmail.com>",
  "license": "MIT"
}
